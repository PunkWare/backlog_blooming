<% provide(:title, "Edit task") %> 
<h1>Update your task</h1>

<%= render 'shared/error_messages', object: @task %>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@task) do |f| %>   

      		<%= render 'fields', f: f %>

      		<%= f.submit "Save changes", :class => "btn btn-large btn-primary" %>
    	<% end %>
  </div>
</div>